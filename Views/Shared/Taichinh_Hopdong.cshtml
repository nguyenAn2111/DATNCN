@model ContactPageViewModel

<!DOCTYPE html>
<html>
<!--phần đầu-->
<head>
	<title>Taichinh_hopdong</title>
	<meta charset="utf-8">
	<link rel="stylesheet" href="style.css">
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<script src="https://kit.fontawesome.com/2f8895050a.js" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
	<style>
		.list-group.item5 {
			background-color: #001F54;
			color: #FEFCFB !important;
		}
	</style>
</head>
<body>
	<div class="surgery-schedule">
		<div class="surgery-major">
			<div class="surgery-title">
				💵 TÀI CHÍNH - HỢP ĐỒNG
			</div>
		</div>
	</div>

	<nav class="menu">
		<div class="dropdown">
			<button class="taichinh-dropbtn">Tài chính</button>
			<div class="dropdown-content">
				<a href="#muasam"> Chi phí mua sắm </a>
				<a href="#baotri"> Chi phí bảo trì  </a>
				<a href="#suachua"> Chi phí sửa chữa </a>
			</div>
		</div>
		<a href="#hopdong">Hợp đồng - Giấy tờ</a>
	</nav>

	<div class="group-container">
		<!--Tài chính-->
		<div class="store">
			<section class="maintain-title" id="Taichinh">
				📦Tài chính
			</section>

			<div class="chart">
				<div class="chart-placeholder">
					<canvas id="pieChart"></canvas>
				</div>
				<div class="chart-placeholder">
					<canvas id="barChart"></canvas>
				</div>
			</div>


			<div class="cards">
				<div class="card-group-container">

					<!--Chi phí mua sắm -->

					<div class="card-group" id="muasam">
						<div>
							<h2>
								<i class="fa-solid fa-cart-shopping" style="margin-right: 0.2rem;"></i>
								Chi phí mua sắm
							</h2>
						</div>
						@{
							long totalCost1 = 0;
							var sortedItems1 = Model.DeviceList.Items
							.Where(x => x.device_received_date != null)
							.OrderBy(x => x.device_received_date)
							.ToList();

							int stt1 = 1;

							foreach (var item in sortedItems1)
							{
								if (long.TryParse(item.contact_finance, out long cost))
								{
									totalCost1 += cost;
								}
							}
						}
						
						<p style="color: red; font-size:20px; font-weight:bold ; margin-bottom: 1rem;">
							Tổng chi phí mua sắm: @totalCost1.ToString("#,##0")đ
						</p>

						<table id="dataTable" style="width:100%;">
							<thead>
								<tr>
									<th>STT</th>
									<th>Mã ID</th>
									<th>Tên thiết bị<br></th>
									<th>Tình trạng nhập về</th>
									<th>Ngày giao dịch</th>
									<th>Chi phí giao dịch</th>
									<th>Vị trí hiện tại</th>
								</tr>
							</thead>
							<tbody>
								@if (Model.DeviceList.PageCount > 0)
								{
									foreach (var item in Model.DeviceList.Items)
									{
										<tr>
											<td>@stt1</td>
											<td class="facility">@item?.device_id</td>
											<td class="facility">@item?.device_name</td>
											<td class="facility">@item?.device_condition</td>
											<td class="facility">@item?.device_received_date?.ToString("dd/MM/yyyy")</td>
											<td class="facility">@item?.contact_finance</td>
											<td class="facility">@item?.room_name</td>
										</tr>
										stt1++;
									}
								}
								else
								{
									<tr>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>

									</tr>
								}

							</tbody>
						</table>
					</div>
					<!-- Phí bảo trì-->
					<div class="card-group" id="baotri">
						<div>
							<h2>
								<i class="fa-solid fa-screwdriver-wrench" style="margin-right: 0.2rem;"></i>
								Chi phí bảo trì 
							</h2>
						</div>
						@{
							long totalCost2 = 0;
							var sortedItems2 = Model.MaintainList.Items
							.Where(x => x.maintain_date != null)
							.OrderBy(x => x.maintain_date)
							.ToList();

							int stt2 = 1;

							foreach (var item in sortedItems2)
							{
								if (long.TryParse(item.contact_finance, out long cost))
								{
									totalCost2 += cost;
								}
							}
						}
						<p style="color: red; font-size:20px; font-weight:bold ; margin-bottom: 1rem;">
							Tổng chi phí bảo trì: @totalCost2.ToString("#,##0")đ
						</p>

						<table id="dataTable" style="width:100%;">
							<thead>
								<tr>
									<th>STT</th>
									<th>Mã ID</th>
									<th>Tên thiết bị<br></th>
									<th>Tình trạng hiện tại</th>
									<th>Ngày giao dịch</th>
									<th>Chi phí giao dịch</th>
									<th>Vị trí hiện tại</th>
								</tr>
							</thead>
							<tbody>
								@if (Model.MaintainList.PageCount > 0)
								{
									foreach (var item in Model.MaintainList.Items)
									{
										<tr>
											<td>@stt2</td>
											<td class="facility">@item.device_id</td>
											<td class="facility">@item.device_name</td>
											<td class="facility">@item.status_name</td>
											<td class="facility">@item.maintain_date?.ToString("dd/MM/yyyy")</td>
											<td class="facility">@item.contact_finance</td>
											<td class="facility">@item.room_name</td>
										</tr>
										stt2++;
									}
								}
								else
								{
									<tr>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
									</tr>
								}

							</tbody>
						</table>
					</div>
					 <!-- Phí sua chua-->
					<div class="card-group" id="suachua">
						<div>
							<h2>
								<i class="fa-solid fa-screwdriver-wrench" style="margin-right: 0.2rem;"></i>
								Chi phí sửa chữa
							</h2>
						</div>
						@{
							long totalCost3 = 0;
							var sortedItems3 = Model.RepairList.Items
							.Where(x => x.repair_date != null)
							.OrderBy(x => x.repair_date)
							.ToList();

							int stt3 = 1;

							foreach (var item in sortedItems3)
							{
								if (long.TryParse(item.contact_finance, out long cost))
								{
									totalCost3 += cost;
								}
							}
						}
						<p style="color: red; font-size:20px; font-weight:bold ; margin-bottom: 1rem;">
							Tổng chi phí sửa chữa: @totalCost3.ToString("#,##0")đ
						</p>

						<table id="dataTable" style="width:100%;">
							<thead>
								<tr>
									<th>STT</th>
									<th>Mã ID</th>
									<th>Tên thiết bị<br></th>
									<th>Tình trạng hiện tại</th>
									<th>Ngày giao dịch</th>
									<th>Chi phí giao dịch</th>
									<th>Vị trí hiện tại</th>
								</tr>
							</thead>
							<tbody>
								@if (Model.RepairList.PageCount > 0)
								{
									foreach (var item in Model.RepairList.Items)
									{
										<tr>
											<td>@stt3</td>
											<td class="facility">@item.FK_device_id</td>
											<td class="facility">@item.device_name</td>
											<td class="facility">@item.status_name</td>
											<td class="facility">@item.repair_date.ToString("dd/MM/yyyy")</td>
											<td class="facility">@item.contact_finance</td>
											<td class="facility">@item.room_name</td>
										</tr>
										stt3++;
									}
								}
								else
								{
									<tr>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
										<td id="facility">NOT FOUND </td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div> 
				<!--shoppingDetail modal-->
				<div id="shoppingDetail" class="modal">
					<div class="modal-content">
						<span class="close" onclick="document.getElementById('shoppingDetail').style.display='none'">&times;</span>
						<h3>Chi tiết thiết bị đã mua</h3>
						<div>
							<input type="text" id="searchInput" placeholder="🔍 Tìm kiếm tên thiết bị">
						</div>

						<table id="dataTable" style="width:100%;">
							<thead>
								<tr>
									<th>Tên thiết bị</th>
									<th>Ngày giao dịch</th>
									<th>Đơn giá/chiếc</th>
									<th>Số lượng</th>
									<th>Tổng giá</th>
									<th>Người phụ trách</th>
								</tr>
							</thead>
							<tbody>
							<td>Máy siêu âm Doopler</td>
							<td>23/4/2025</td>
							<td>20.000.000</td>
							<td>2</td>
							<td>40.000.000</td>
							<td>Lê Minh Hà</td>
							</tbody>
							<tbody>
							<td>Máy SPO2</td>
							<td>18/4/2025</td>
							<td>11.000.000</td>
							<td>2</td>
							<td>22.000.000</td>
							<td>Nguyễn Trường An</td>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!--Hợp đồng-->
	<div class="store">
		<section class="maintain-title" id="hopdong">
			🚛 Hợp đồng - Giấy tờ
		</section>

		<div id="hopdongTable">
			<div>
				<input type="text" id="searchInputhopdong" placeholder="🔍 Tìm kiếm tên hợp đồng...">
			</div>
			<table id="dataTable" style="width:100%;">
				<thead>
					<tr>
						<th>Tên Hợp đồng</th>
						<th>Loại Giao dịch</th>
						<th>Ngày ký</th>
						<th>Trạng thái</th>
						<th>Tập tin</th>
					</tr>
				</thead>
				<tbody>
				<td>Hợp đồng mua bán máy siêu doopler</td>
				<td>Mua bán</td>
				<td>23/4/2025</td>
				<td>Hiệu lực</td>
				<td>
					<button type="button" id="deleteBtn">
						<i class="fa-solid fa-file-word"></i>
					</button>
				</td>
				</tbody>
				<tbody>
				<td>Hợp đồng bảo trì máy thở phillip</td>
				<td>Bảo trì</td>
				<td>1/4/2025</td>
				<td>Hiệu lực</td>
				<td>
					<button type="button" id="deleteBtn">
						<i class="fa-solid fa-file-word"></i>
					</button>
				</td>
				</tbody>
			</table>
		</div>
	</div>
	</div>

	<!--sờ cờ ríp-->
	<script>
		// window.onclick = function (event) {
		// 	// Kiểm tra nếu người dùng bấm vào vùng ngoài modal (tức là phần nền mờ)
		// 	if (event.target === document.getElementById('shoppingDetail') ||
		// 		event.target === document.getElementById('insuranceDetail')
		// 	) {
		// 		event.target.style.display = "none";
		// 	}
		// }

		// Tìm kiếm theo tên thiết bị
		document.getElementById("searchInput").addEventListener("keyup", function () {
			const filter = this.value.toUpperCase();
			const rows = document.querySelectorAll("#shoppingDetail tbody tr");

			rows.forEach(row => {
				const cell = row.querySelector("td");
				if (cell && cell.textContent.toUpperCase().indexOf(filter) > -1) {
					row.style.display = "";
				} else {
					row.style.display = "none";
				}
			});
		});

		//Tìm kiếm chi phí sửa chữa / bảo trì
		document.getElementById("searchInputInsuracnce").addEventListener("keyup", function () {
			const filter = this.value.toUpperCase();
			const rows = document.querySelectorAll("#insuranceDetail tbody tr");

			rows.forEach(row => {
				const cell = row.querySelector("td");
				if (cell && cell.textContent.toUpperCase().indexOf(filter) > -1) {
					row.style.display = "";
				} else {
					row.style.display = "none";
				}
			});
		});

		// Tìm kiếm hợp đồng
		document.getElementById("searchInputhopdong").addEventListener("keyup", function () {
			const filter = this.value.toUpperCase();
			const rows = document.querySelectorAll("#hopdongTable tbody tr");

			rows.forEach(row => {
				const cell = row.querySelector("td");
				if (cell && cell.textContent.toUpperCase().indexOf(filter) > -1) {
					row.style.display = "";
				} else {
					row.style.display = "none";
				}
			});
		});
	</script>

	
	<script>
		// Biểu đồ tròn - Tỉ lệ chi phí
		// Biểu đồ tròn - Tỉ lệ chi phí
		const pieCtx = document.getElementById('pieChart').getContext('2d');
		const pieChart = new Chart(pieCtx, {
			type: 'pie',
			data: {
				labels: ['Mua sắm', 'Bảo trì', 'Sửa chữa'],
				datasets: [{
					label: 'Tỉ lệ chi phí',
					data: [@totalCost1, @totalCost2, @totalCost3], // Sử dụng biến từ Model
					backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56'],
					hoverOffset: 4
				}]
			},
			options: {
				responsive: true,
				plugins: {
					legend: {
						position: 'top',
					},
					tooltip: {
						callbacks: {
							label: function (context) {
								let label = context.label || '';
								let value = context.raw || 0;
								return label + ': ' + value.toLocaleString() + ' VND';
							}
						}
					}
				}
			}
		});

		// Biểu đồ cột - Chi phí theo tháng
		
	</script>

</body>
